<h1>Needy User Edit</h1>

<%= link_to "Back to Profile", needy_path(@needy) %>
<%= form_with model: @needy, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <%= form.label :email %>
  <%= form.text_field :email %>
  <br>
  <%= form.label :bio %>
  <%= form.text_area :bio %>
  <br>
  <%= form.submit "Update Your Profile" %>
<% end %>

<%= link_to "Delete Your Profile", needy_path, method: "delete", data: { confirm: "Are you sure you want to delete your profile?" }, class: "plain" %>
